<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding4</item>
        <item name="android:paddingLeft">@dimen/margin24</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding4</item>
        <item name="android:layout_marginRight">@dimen/padding20</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="Check_Box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="scrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/back2</item>
    </style>

    <style name="mainLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/padding10</item>
        <item name="android:paddingRight">@dimen/padding10</item>
        <item name="android:paddingTop">@dimen/padding12</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding12</item>
        <item name="android:paddingBottom">@dimen/padding20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding20</item>
        <item name="android:layout_marginRight">@dimen/margin24</item>
        <item name="android:layout_marginLeft">@dimen/margin24</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="questionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin8</item>
        <item name="android:textSize">@dimen/questionHeaderTextSize</item>
        <item name="android:textColor">@color/QHeader</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/padding12</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

    <style name="linear1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin24</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="q1EditText">
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="q1TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding4</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="radioGroupStyleH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin24</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radioGropStyleV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin24</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="editText2">
        <item name="android:layout_width">@dimen/editText2Width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin24</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="linearH2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/padding10</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding16</item>
        <item name="android:layout_marginTop">@dimen/padding16</item>
    </style>


</resources>
